<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_stage_tree" model="ir.ui.view">
        <field name="name">project.stage.tree</field>
        <field name="model">my.project.stage</field>
        <field name="arch" type="xml">
            <tree string="Project Stages">
                <field name="name"/>
                <field name="sequence"/>
            </tree>
        </field>
    </record>

    <record id="view_project_stage_form" model="ir.ui.view">
        <field name="name">project.stage.form</field>
        <field name="model">my.project.stage</field>
        <field name="arch" type="xml">
            <form string="Project Stage">
                <group>
                    <field name="name"/>
                    <field name="sequence"/>
                </group>
            </form>
        </field>
    </record>


    <record id="action_my_project_stage" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">task</field>
        <field name="view_mode">kanban,tree,graph,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Employee!
            </p>
        </field>
    </record>


    <menuitem id="menu_my_project_stage"
              name="Project Stages"
              parent="menu_configration_master"
              action="action_my_project_stage"
              sequence="10"/>
</odoo>
