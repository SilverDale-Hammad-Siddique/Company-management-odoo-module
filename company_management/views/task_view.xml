<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="view_task_view_pivot" model="ir.ui.view">
        <field name="name">task.pivot</field>
        <field name="model">task</field>
        <field name="arch" type="xml">
            <pivot string="Tasks" sample="1" js_class="project_pivot">
                <field name="project_idd" type="row"/>
                <field name="color" invisible="1"/>
                <field name="sequence" invisible="1"/>
                <field name="planned_hours" widget="float_time"/>
                <field name="working_hours_close" widget="float_time"/>
                <field name="working_hours_open" widget="float_time"/>
            </pivot>
        </field>
    </record>

    <record id="view_task_tree" model="ir.ui.view">
        <field name="name">task.tree</field>
        <field name="model">task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="priority" widget="priority" optional="show" nolabel="1"/>
                <field name="name" widget="name_with_subtask_count" decoration-success="1"/>
                <field name="project_idd" widget="project_private_task" optional="show" readonly="1"
                       options="{'no_open': 1}" decoration-danger="1"/>

                <field name="partner_idd" optional="hide"/>
                <field name="employee_ids" class="o_task_user_field"
                       widget="many2many_avatar_user" decoration-success="1"/>
                <field name="date_deadline" optional="hide" widget="remaining_days"/>
                <field name="tags_idd" widget="many2many_tags" optional="show"
                       context="{'project_idd': project_idd}"/>
                <field name="progress" widget="progressbar" decoration-info="1"/>
            </tree>
        </field>
    </record>

    <record id="view_task_form" model="ir.ui.view">
        <field name="name">task.form</field>
        <field name="model">task</field>
        <field name="arch" type="xml">
            <form string="Task" class="o_form_project_tasks" js_class="project_task_form">
                <header>
                    <button name="action_assign_to_me" string="Assign to Me" type="object" class="oe_highlight"
                            data-hotkey="q" invisible="True"/>

                    <field name="state" widget="statusbar" options="{'clickable':'1'}"
                           statusbar_visible="new,planing,in_progress"/>

                </header>
                <sheet>
                    <sheet>
                        <h2>
                            <div class="d-flex w-100">
                                <field name="priority" widget="priority" class="me-3"/>
                                <field name="name" class="o_task_name text-truncate w-100 w-md-75 pe-2"
                                       placeholder="Task Title..."/>
                            </div>
                        </h2>
                        <group>
                            <group>
                                <field name="project_idd" placeholder="Private"
                                       widget="project_private_task"/>
                                <field name="employee_ids" class="o_task_user_field"
                                       widget="many2many_avatar_user"/>
                            </group>
                            <group>
                                <field name="partner_idd"/>
                                <field name="date_deadline"/>
                                <field name="tags_idd" widget="many2many_tags"/>
                                <field name="progress" widget="progressbar"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Timesheets">
                                <group>
                                    <field name="allocated_hours" widget="timesheet_uom_no_toggle"
                                           modifiers="{&quot;invisible&quot;: [[&quot;allow_timesheets&quot;, &quot;=&quot;, false]]}"/>
                                </group>
                                <field name="timesheet_ids2"/>
                                <group>
                                    <field name="remaining_hours"/>
                                </group>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <group>
                                        <field name="sequence"/>
                                    </group>
                                    <group>
                                        <field name="assign_date"/>
                                        <field name="last_stage_update"/>
                                    </group>
                                </group>
                            </page>

                        </notebook>
                    </sheet>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'post_refresh':True}"
                           help="Follow this project to automatically track the events associated to tasks and issues of this project."
                           groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_task" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">task</field>
        <field name="view_mode">tree,kanban,pivot,graph,activity,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Employee!
            </p>
        </field>
    </record>

    <menuitem id="menu_task"
              name="Tasks"
              action="action_task"
              parent="menu_project2"
              sequence="0"/>
</odoo>