<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_activity_form" model="ir.ui.view">
            <field name="name">activity.form</field>
            <field name="model">activity</field>
            <field name="arch" type="xml">
                <form string="Activity Form">
                    <sheet>
                        <group>
                            <field name="name"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_activity_tree" model="ir.ui.view">
            <field name="name">activity.tree</field>
            <field name="model">activity</field>
            <field name="arch" type="xml">
                <tree string="Activity Tree">
                    <field name="name"/>

                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_activity" model="ir.actions.act_window">
            <field name="name">Activities</field>
            <field name="res_model">activity</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new activity.
                </p>
            </field>
        </record>

        <!--        &lt;!&ndash; Menu Item &ndash;&gt;-->
<!--        <menuitem id="menu_activity"-->
<!--                  name="Activities"-->
<!--                  parent="menu_timeoff_master"-->
<!--                  action="action_activity"-->
<!--                  sequence="30"/>-->
    </data>
</odoo>
