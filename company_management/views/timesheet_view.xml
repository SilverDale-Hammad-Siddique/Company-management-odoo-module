<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="employee_timesheet_view_graph" model="ir.ui.view">
            <field name="name">time.sheet.employee.graph</field>
            <field name="model">time.sheet.employee</field>
            <field name="arch" type="xml">
                <graph string="Timesheet" sample="1" js_class="hr_timesheet_graphview">
                    <field name="employee_idd"/>
                    <field name="project_idd"/>
                    <field name="amount" type="measure" string="Timesheet Costs"/>
                    <field name="unit_amount" type="measure" widget="timesheet_uom"/>
                </graph>
            </field>
        </record>

        <record id="employee_timesheet_view_pivot" model="ir.ui.view">
            <field name="name">time.sheet.employee.pivot</field>
            <field name="model">time.sheet.employee</field>
            <field name="priority">60</field>
            <field name="arch" type="xml">
                <pivot string="Timesheets" sample="1">
                    <field name="employee_idd" type="row"/>
                    <field name="date" interval="month" type="col"/>
                    <field name="unit_amount" type="measure" widget="timesheet_uom"/>
                    <field name="amount" string="Timesheet Costs"/>
                </pivot>
            </field>
        </record>
        <!-- View Definitions -->
        <record id="employee_timesheet_view_kanban" model="ir.ui.view">
            <field name="name">employee.timesheet.kanban</field>
            <field name="model">time.sheet.employee</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <field name="date"/>
                    <field name="employee_idd"/>
                    <field name="name"/>
                    <field name="project_idd"/>
                    <field name="task_idd" context="{'default_project_idd': project_idd}"
                           domain="[('project_idd', '=', project_idd)]"/>
                    <field name="unit_amount" widget="timesheet_uom"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill px-0 pb-0">
                                <div class="oe_kanban_details d-flex flex-column">
                                    <div class="o_kanban_record_top px-2 h-50">
                                        <img t-if="record.employee_idd"
                                             t-att-src="kanban_image('hr.employee', 'avatar_128', record.employee_idd.raw_value)"
                                             t-att-title="record.employee_idd.value"
                                             t-att-alt="record.employee_idd.value"
                                             class="o_image_40_cover float-start"/>
                                        <div class="o_kanban_record_headings ps-4 pe-2">
                                            <div class="text-truncate">
                                                <strong class="o_kanban_record_title">
                                                    <span t-if="record.project_idd" t-esc="record.project_idd.value"
                                                          t-att-title="record.project_idd.value"/>
                                                </strong>
                                            </div>
                                            <div class="text-truncate">
                                                <i>
                                                    <span t-if="record.task_idd" t-esc="record.task_idd.value"
                                                          t-att-title="record.task_idd.value"/>
                                                </i>
                                            </div>
                                            <div class="text-truncate">
                                                <span t-if="record.name" t-esc="record.name.value"
                                                      t-att-title="record.name.value"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom d-block mx-2">
                                        <hr class="mt4 mb4"/>
                                        <span>
                                            <i class="fa fa-calendar me-1" role="img" aria-label="Date" title="Date"/>
                                            <t t-esc="record.date.value"/>
                                        </span>
                                        <span class="float-end" name="duration">
                                            <strong>Duration:</strong>
                                            <field name="unit_amount" widget="timesheet_uom"
                                                   decoration-danger="unit_amount &gt; 24"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>

                </kanban>
            </field>
        </record>

        <record id="view_employee_timesheet_tree" model="ir.ui.view">
            <field name="name">Timesheets</field>
            <field name="model">time.sheet.employee</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="Timesheet Activities" sample="1">
                    <field name="date" decoration-success="1"/>
                    <field name="employee_idd" widget="many2one_avatar" decoration-info="1"/>
                    <field name="project_idd" required="1" options="{'no_create_edit': True, 'no_open': 1}"
                           decoration-danger="1"/>
                    <field name="task_idd" optional="show" options="{'no_create_edit': True, 'no_open': True}"
                           widget="task_with_hours" context="{'default_project_idd': project_idd}" decoration-info="1"/>
                    <field name="name" optional="show" required="0" decoration-success="1"/>
                    <field name="unit_amount" optional="show" widget="timesheet_uom" sum="Total" decoration-danger="1"/>
                    <field name="company_idd" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_timesheets_form" model="ir.ui.view">
            <field name="name">Timesheets</field>
            <field name="model">time.sheet.employee</field>
            <field name="arch" type="xml">
                <form string="Company">
                    <sheet>
                        <form string="Timesheets">
                            <sheet>
                                <group>
                                    <group>
                                        <field name="date" decoration-success="1"/>
                                        <field name="project_idd" required="1" decoration-danger="1"/>
                                        <field name="amount" decoration-danger="1"/>
                                    </group>
                                    <group>
                                        <field name="task_idd" widget="task_with_hours" decoration-info="1"/>
                                        <field name="unit_amount" decoration-danger="1"/>
                                        <field name="company_idd" decoration-success="1"/>
                                        <field name="employee_idd" widget="many2one_avatar" decoration-info="1"/>
                                    </group>
                                </group>
                                <notebook>
                                    <page string="Description">
                                        <field name="description"/>
                                    </page>
                                </notebook>
                            </sheet>
                        </form>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action Definition -->
        <record id="action_employee_timesheet" model="ir.actions.act_window">
            <field name="name">Timesheets</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">time.sheet.employee</field>
            <field name="view_mode">tree,kanban,pivot,graph,form</field>
        </record>

        <!-- Menu Item Definition -->
        <menuitem id="menu_employee_timesheet2"
                  name="Timesheets"
                  action="action_employee_timesheet"
                  parent="menu_configration_master"
                  sequence="0"/>
    </data>
</odoo>
