<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_kanban2" model="ir.ui.view">
        <field name="name">company.kanban</field>
        <field name="model">company</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div t-attf-class="#{!selection_mode ? 'text-center' : ''}">
                                <i class="fa fa-building" role="img" aria-label="Enterprise" title="Enterprise"/>
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>
                            <hr class="mt4 mb4"/>
                            <div class="row" t-if="!selection_mode">
                                <div t-if="record.email.value" class="col-6 text-center">
                                    <strong>Email:</strong>
                                </div>
                                <div t-if="record.phone.value" class="col-6 text-center">
                                    <strong>Phone</strong>
                                </div>
                                <div t-if="record.email.value" class="col-6 text-center">
                                    <field name="email"/>
                                </div>
                                <div t-if="record.phone.value" class="col-6 text-center o_force_ltr">
                                    <field name="phone"/>
                                </div>
                            </div>
                            <div t-else="">
                                <div t-if="record.email.value">
                                    <strong>Email:</strong>
                                    <field name="email"/>
                                </div>
                                <div t-if="record.phone.value" class="o_force_ltr">
                                    <strong>Phone:</strong>
                                    <field name="phone"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_company_tree" model="ir.ui.view">
        <field name="name">company.tree</field>
        <field name="model">company</field>
        <field name="arch" type="xml">
            <tree string="Companies">
                <field name="name" decoration-success="1"/>
                <field name="partner_id" decoration-info="1"/>
                <field name="email" widget="email"/>
                <field name="phone" class="o_force_ltr" widget="phone"/>

            </tree>
        </field>
    </record>

    <record id="view_company_form" model="ir.ui.view">
        <field name="name">company.form</field>
        <field name="model">company</field>
        <field name="arch" type="xml">
            <form string="Company">
                <!--                <header>-->
                <!--                    <button name="action_print_report" string="Print" type="object" class="btn-primary"/>-->
                <!--                </header>-->

                <sheet>
                    <form string="company">
                        <sheet>
                            <field name="image" widget="image" class="oe_avatar"/>
                            <div class="oe_title">
                                <label for="name"/>
                                <h1>
                                    <field name="name" placeholder="eg.your company name" widget="name"/>
                                </h1>
                            </div>
                            <notebook colspan="4">
                                <page string="General Information" name="general_info">
                                    <group>
                                        <group>
                                            <field name="partner_id" string="Contact"/>
                                            <label for="street" string="Address"/>
                                            <div class="o_address_format">
                                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                                <field name="street2" placeholder="Street 2..."
                                                       class="o_address_street"/>
                                                <field name="city" placeholder="City" class="o_address_city"/>
                                                <field name="state_id" class="o_address_state" placeholder="State"
                                                       options="{'no_open': True}"/>
                                                <field name="country_id" placeholder="Country" class="o_address_country"
                                                       options="{'no_open': True, 'no_create': True}"/>
                                            </div>
                                            <field name="currency_id" options="{'no_create': True, 'no_open': True}"
                                                   id="company_currency" context="{'active_test': False}"/>
                                            <field name="linkedin_profile" widget="url"/>
                                        </group>
                                        <group>
                                            <field name="phone" class="o_force_ltr" widget="phone"/>
                                            <field name="mobile" class="o_force_ltr" widget="phone"/>
                                            <field name="email" widget="email"/>
                                            <field name="website" string="Website" widget="url"/>
                                            <field name="parent_id" groups="base.group_multi_company"/>
                                            <field name="sequence" invisible="1"/>
                                            <!--                                            <field name="favicon" widget="image" class="float-start oe_avatar"-->
                                            <!--
                                 groups="base.group_no_one"/>-->
                                        </group>
                                        <group name="social_media"/>
                                    </group>
                                </page>
                            </notebook>
                            <notebook>
                                <page string="Description">
                                    <field name="description"/>
                                </page>
                            </notebook>
                        </sheet>
                    </form>
                </sheet>
            </form>
        </field>
    </record>

    <!--ACTION    -->
    <record id="action_company1" model="ir.actions.act_window">
        <field name="name">Companies</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">company</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Employee!
            </p>
        </field>
    </record>

    <menuitem id="menu_company1"
              name="Companies"
              action="action_company1"
              parent="menu_company_master"
              sequence="0"
    />
</odoo>